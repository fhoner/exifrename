<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fhoner.exifrename.controller.RenameController">
   <children>
      <VBox prefHeight="120.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox>
               <children>
                  <Label prefHeight="19.0" prefWidth="161.0" text="Source directory:">
                     <padding>
                        <Insets top="3.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtSource" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#btnBrowseSource" text="...">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="19.0" prefWidth="161.0" text="Destination directory:">
                     <padding>
                        <Insets top="3.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtDestination" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#btnBrowseDestination" text="...">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="19.0" prefWidth="161.0" text="Text pattern:">
                     <padding>
                        <Insets top="3.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtPattern" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="26.0" prefWidth="161.0" />
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="village (%v)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="county (%c)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="26.0" prefWidth="161.0" />
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="state (%s)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="country (%C)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="26.0" prefWidth="161.0" />
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="year four digit (%y)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="year two digit (%Y)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="26.0" prefWidth="161.0" />
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="month (%m)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="day (%d)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="26.0" prefWidth="161.0" />
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="hour (%h)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="minute (%M)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="26.0" prefWidth="161.0" />
                  <Pane prefHeight="26.0" prefWidth="150.0">
                     <HBox.margin>
                        <Insets right="4.0" />
                     </HBox.margin>
                  </Pane>
                  <Button mnemonicParsing="false" onAction="#insertVariable" prefHeight="26.0" prefWidth="150.0" text="second (%s)">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblProgress" text="Progress: 0/0">
                     <padding>
                        <Insets top="3.0" />
                     </padding>
                     <HBox.margin>
                        <Insets right="20.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnMakeFiles" mnemonicParsing="false" onAction="#makeFiles" prefHeight="26.0" prefWidth="101.0" text="Go!">
                     <HBox.margin>
                        <Insets bottom="2.0" right="4.0" top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
